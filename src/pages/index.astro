---
import Layout from '@layouts/Layout.astro'

import OpenGraph from '@components/OpenGraph.astro'
import Navbar from '@components/Navbar.astro'
import Topbar from '@components/Topbar.astro'
import Playground from '@ui/Playground/Playground.astro'
import Console from '@ui/Console.astro'

const options = {
  title: 'Codepen Concept',
  description: 'Dise√±o experimental de Codepen, creado por BlurSoul.'
}
---

<Layout options={options}>
  <OpenGraph title={options.title} description={options.description} slot="social" />

  <main>
    <Topbar />
    <Navbar />
    <Playground />
    <Console />
  </main>
</Layout>

<style>
  main {
    display: grid;
    grid-template-rows: auto auto 1fr;
    gap: 32px;
    height: inherit;
    padding: 0 24px;
  }
</style>
