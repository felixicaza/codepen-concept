---
import { Icon } from 'astro-icon/components'

interface Props {
  icon: string
}

const { icon } = Astro.props
---

<div class="button-cont">
  <button class="button animated">
    <Icon name={icon} size={24} />
  </button>
</div>
<style is:inline>
  @property --angle {
    syntax: '<angle>';
    initial-value: 0deg;
    inherits: false;
  }

  .button {
    padding: 0.5rem;
    background: linear-gradient(to top, #333333, #111111);
    /* background: linear-gradient(to right, black, blue, gold, green, red); */
    text-align: center;
    position: relative;
    border-radius: 8px;
    border: none;
    cursor: pointer;

    &:hover::before,
    &:hover::after {
      content: '';

      z-index: -1;
      width: 100%;
      height: 100%;

      position: absolute;
      translate: -50% -50%;
      inset-block-start: 50%;
      inset-inline-start: 50%;

      padding: 1.45rem;
      border-radius: 8px;
      background-image: conic-gradient(
        from var(--angle),
        #47cf73,
        #ffdd40,
        #ae63e4,
        #ae63e4,
        #0ebeff,
        #47cf73
      );
    }

    &::before {
      opacity: 0.5;
      filter: blur(1.5rem);
    }

    &.animated {
      &::before,
      &::after {
        animation: spin 3s linear infinite;
      }
    }
  }

  @keyframes spin {
    from {
      --angle: 0deg;
    }
    to {
      --angle: 360deg;
    }
  }
</style>
