{
  "name": "codepen-concept",
  "version": "1.0.0",
  "private": true,
  "description": "Este repositorio contiene el desarrollo del dise√±o experimental de Codepen, creado por BlurSoul.",
  "keywords": [
    "astro",
    "design",
    "html",
    "css",
    "ui-design",
    "codepen",
    "redesign"
  ],
  "bugs": {
    "url": "https://github.com/felixicaza/codepen-concept/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixicaza/codepen-concept.git"
  },
  "license": "MIT",
  "author": "Felix Icaza <fx.joliett17@gmail.com>",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "prepare": "simple-git-hooks",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm ls-lint",
    "commit-msg": "pnpm commitlint -c -e ${1}"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs,ts,astro,yml,yaml,json}": [
      "eslint --cache --fix ./"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/ts-plugin": "1.10.4",
    "@fontsource-variable/montserrat": "5.1.1",
    "@playform/compress": "0.1.7",
    "@playform/inline": "0.1.1",
    "astro": "4.16.18",
    "astro-compressor": "1.0.0",
    "astro-icon": "1.1.5",
    "astro-seo-schema": "4.0.3",
    "astro-sitemap": "1.0.0",
    "astro-tunnel": "0.1.6",
    "lightningcss": "1.29.1",
    "sanitize.css": "13.0.0",
    "schema-dts": "1.1.2",
    "sharp": "0.33.5",
    "typescript": "5.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.20.0",
    "@ls-lint/ls-lint": "2.2.3",
    "astro-eslint-parser": "1.2.1",
    "eslint": "9.20.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsonc": "2.19.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-package-json": "0.26.0",
    "eslint-plugin-perfectionist": "4.8.0",
    "eslint-plugin-yml": "1.16.0",
    "globals": "15.14.0",
    "jsonc-eslint-parser": "2.4.0",
    "lint-staged": "15.4.1",
    "neostandard": "0.12.1",
    "simple-git-hooks": "2.11.1",
    "typescript-eslint": "8.23.0",
    "yaml-eslint-parser": "1.2.3"
  },
  "engines": {
    "node": ">=22.13.1",
    "pnpm": ">=10.0.0"
  }
