{
  "name": "codepen-concept",
  "version": "1.0.0",
  "private": true,
  "description": "Este repositorio contiene el desarrollo del dise√±o experimental de Codepen, creado por BlurSoul.",
  "keywords": [
    "astro",
    "design",
    "html",
    "css",
    "ui-design",
    "codepen",
    "redesign"
  ],
  "bugs": {
    "url": "https://github.com/felixicaza/codepen-concept/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixicaza/codepen-concept.git"
  },
  "license": "MIT",
  "author": "Felix Icaza <fx.joliett17@gmail.com>",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "prepare": "simple-git-hooks",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm ls-lint",
    "commit-msg": "pnpm commitlint -c -e ${1}"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs}": [
      "eslint --cache --fix --ext .js,.mjs,.cjs ./",
      "prettier --cache --write \"./**/*.{js,mjs,cjs}\""
    ],
    "./**/*.ts": [
      "eslint --cache --fix --ext .ts ./",
      "prettier --cache --write \"./**/*.ts\""
    ],
    "./src/**/*.astro": [
      "eslint --cache --fix --ext .astro ./src/",
      "prettier --cache --write \"./src/**/*.astro\""
    ],
    "./src/**/*.css": "prettier --cache --write \"./src/**/*.css\"",
    "./**/*.svg": "prettier --cache --write \"./**/*.svg\"",
    "./**/*.json": "prettier --cache --write \"./**/*.json\"",
    "./**/*.yml": "prettier --cache --write \"./**/*.yml\""
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/ts-plugin": "1.10.4",
    "@fontsource-variable/montserrat": "5.1.0",
    "@playform/compress": "0.1.6",
    "@playform/inline": "0.1.0",
    "astro": "4.16.7",
    "astro-compressor": "0.4.1",
    "astro-icon": "1.1.1",
    "astro-seo-schema": "4.0.2",
    "astro-sitemap": "1.0.0",
    "astro-tunnel": "0.1.6",
    "lightningcss": "1.27.0",
    "sanitize.css": "13.0.0",
    "schema-dts": "1.1.2",
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@ianvs/prettier-plugin-sort-imports": "4.3.1",
    "@ls-lint/ls-lint": "2.2.3",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.0",
    "astro-eslint-parser": "1.0.3",
    "eslint": "8.57.0",
    "eslint-config-love": "47.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-astro": "1.3.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-n": "17.12.0",
    "eslint-plugin-promise": "6.1.1",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.8",
    "simple-git-hooks": "2.11.1"
  },
  "engines": {
    "node": ">=18.20.0",
    "pnpm": ">=9.12.0"
  }
}
